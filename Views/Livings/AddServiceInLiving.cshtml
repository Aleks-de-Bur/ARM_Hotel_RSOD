@model IEnumerable < ARM_Hotel.Models.Service>
@{
    ViewBag.Title = "AddServiceInLiving";
}

<h2>AddServiceInLiving</h2>

<div class="form-group">
    @Html.ActionLink("Создать новую услугу", "Create", "Service", null, new { @class = "btn btn-info" })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @using (Html.BeginForm())
                {
                    <div>
                        @Html.Hidden("ServiceId", item.Id)
                        <input type="submit" value="Выбрать" class="btn btn-primary" />
                    </div>
                }
            </td>
        </tr>
    }

</table>

