@model IEnumerable<ARM_Hotel.Models.Booking>

@{
    ViewBag.Title = "Бронирования";
}

<h2>Список бронирований</h2>

<p>
    @Html.ActionLink("Забронировать номер", "Index", "TakeLivings", new { isLiving = false }, new { @class = "btn btn-info" })
</p>

@if (User.IsInRole("Admin") || User.IsInRole("Operator"))
{
    <div class="form-actions no-color">
        <button class="btn-group">
            @Html.ActionLink("Сформировать отчёт за последний месяц", "BookingStat")
        </button>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apartment.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Settling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eviction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Apartment.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Settling)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eviction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueOfGuests)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink("Заселить", "BookingToLiving", new { id = item.Id }) |
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

}
else if (User.IsInRole("Client"))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apartment.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Settling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eviction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Apartment.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Settling)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eviction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValueOfGuests)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
