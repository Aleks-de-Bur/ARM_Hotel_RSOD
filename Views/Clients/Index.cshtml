@model IEnumerable<ARM_Hotel.Models.Client>

@{
    ViewBag.Title = "Постояльцы";
}

<h2>Список постояльцев</h2>

<p>
    @Html.ActionLink("Добавить нового постояльца", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeriaPas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberPas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriaPas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberPas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelNumber)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id })

                </td>
            }
        </tr>
    }

</table>
@if (User.IsInRole("Admin") || User.IsInRole("Operator")) { 
    <div class="form-actions no-color">
        <button class="btn-group">
            @Html.ActionLink("Сформировать список постояльцев", "ClientsStat")
        </button>
    </div>
}
